{
	"compileOnSave": true,
	"compilerOptions":
	{
		"lib": [ "es2018", "dom" ],
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"outDir": "lib",
		"declaration": true,
		"declarationMap": true
	},
	"include": [ "src" ],
	"typedocOptions": {
		"mode": "modules",
		"out": "docs",
		"exclude": [
			"src/errors.ts",
			"src/utils.ts",
			"src/Logger.ts",
			"src/EnhancedEventEmitter.ts",
			"src/__tests__/**/*.ts"
		],
		"excludeNotExported": true,
		"excludePrivate": true,
		"excludeProtected": true,
		"stripInternal": true,
		"theme": "default",
		"gitRemote": "origin"
	}
}
