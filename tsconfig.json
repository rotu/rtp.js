{
	"compileOnSave": true,
	"compilerOptions": {
		"lib": [
			"esnext",
			"dom"
		],
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"outDir": "lib",
		"declaration": true,
		"declarationMap": true
	},
	"include": [
		"src"
	],
	"typedocOptions": {
		"out": "docs",
		"githubPages": true,
		"excludePrivate": true,
		"excludeProtected": true,
		"excludeInternal": true,
		"includeVersion": true,
		"validation": {
			"invalidLink": true
		},
		"theme": "default",
		"gitRemote": "origin",
		"hideGenerator": false
	}
}